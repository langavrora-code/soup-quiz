        function updateProgress() {
            const totalQuestions = 10;
            let answeredQuestions = 0;
            
            for(let i = 1; i <= totalQuestions; i++) {
                if(document.querySelector(`input[name="q${i}"]:checked`)) {
                    answeredQuestions++;
                }
            }
            
            const progress = (answeredQuestions / totalQuestions) * 100;
            document.getElementById('progressBar').style.width = progress + '%';
            
            // –û–±–Ω–æ–≤–ª—è–µ–º –∫–Ω–æ–ø–∫—É –≤ –∑–∞–≤–∏—Å–∏–º–æ—Å—Ç–∏ –æ—Ç –∑–∞–ø–æ–ª–Ω–µ–Ω–Ω–æ—Å—Ç–∏
            const submitBtn = document.getElementById('submitBtn');
            if (answeredQuestions === totalQuestions) {
                submitBtn.disabled = false;
                submitBtn.textContent = 'ü•¢–£–∑–Ω–∞—Ç—å, –∫–æ–∫–æ–≤ —è —Å—É–ø—á–∏–∫ü•¢';
            } else {
                submitBtn.disabled = false; // –û—Å—Ç–∞–≤–ª—è–µ–º –∞–∫—Ç–∏–≤–Ω–æ–π, –Ω–æ –±—É–¥–µ–º –ø–æ–∫–∞–∑—ã–≤–∞—Ç—å –æ—à–∏–±–∫—É
                submitBtn.textContent = `ü•¢ –û—Ç–≤–µ—á–µ–Ω–æ: ${answeredQuestions}/10 ü•¢`;
            }
        }

        function showError(message) {
            const errorDiv = document.getElementById('errorMessage');
            errorDiv.textContent = message;
            errorDiv.style.display = 'block';
            errorDiv.scrollIntoView({ behavior: 'smooth', block: 'center' });
            
            setTimeout(() => {
                errorDiv.style.display = 'none';
            }, 3000);
        }

        function calculateResult(answers) {
            // –ü–æ–¥—Å—á–∏—Ç—ã–≤–∞–µ–º –æ—Ç–≤–µ—Ç—ã
            const counts = {A: 0, B: 0, C: 0, D: 0};
            Object.values(answers).forEach(answer => counts[answer]++);
            
            // –û–ø—Ä–µ–¥–µ–ª—è–µ–º –æ—Å–Ω–æ–≤–Ω–æ–π —Ç–∏–ø
            const maxCount = Math.max(...Object.values(counts));
            const winners = Object.keys(counts).filter(key => counts[key] === maxCount);
            
            // –ï—Å–ª–∏ –Ω–µ—Å–∫–æ–ª—å–∫–æ –≤–∞—Ä–∏–∞–Ω—Ç–æ–≤ —Å –æ–¥–∏–Ω–∞–∫–æ–≤—ã–º –∫–æ–ª–∏—á–µ—Å—Ç–≤–æ–º, –∏—Å–ø–æ–ª—å–∑—É–µ–º –ø—Ä–∏–æ—Ä–∏—Ç–µ—Ç—ã
            let result;
            if (winners.length === 1) {
                result = winners[0];
            } else {
                // –ü—Ä–∏–æ—Ä–∏—Ç–µ—Ç –¥–ª—è —Å–ª—É—á–∞–µ–≤ —Ä–∞–≤–µ–Ω—Å—Ç–≤–∞: B > D > A > C
                if (winners.includes('B')) result = 'B';
                else if (winners.includes('D')) result = 'D';
                else if (winners.includes('A')) result = 'A';
                else result = 'C';
            }
            
            // –°–æ–ø–æ—Å—Ç–∞–≤–ª—è–µ–º —Å —Å—É–ø–∞–º–∏
            const soupMapping = {
                'A': '–§–æ –ë–æ',
                'B': '–¢–æ–º –Ø–º', 
                'C': '–†–∞–º–µ–Ω',
                'D': ['–ö–∏–º—á–∏ –ß–∏–≥—ç', '–í–æ–Ω—Ç–æ–Ω', '–¢–æ–º –ö—Ö–∞', '–ú–∏—Å–æ-—Å—É–ø'][Math.floor(Math.random() * 4)]
            };
            
            return soupMapping[result];
        }

        function restartQuiz() {
            // –°–±—Ä–æ—Å —Ñ–æ—Ä–º—ã
            document.getElementById('quizForm').reset();
            
            // –°–∫—Ä—ã—Ç–∏–µ —Ä–µ–∑—É–ª—å—Ç–∞—Ç–∞ –∏ –ø–æ–∫–∞–∑ —Ñ–æ—Ä–º—ã
            document.getElementById('result').style.display = 'none';
            document.getElementById('quizForm').style.display = 'block';
            
            // –°–±—Ä–æ—Å –ø—Ä–æ–≥—Ä–µ—Å—Å–∞
            document.getElementById('progressBar').style.width = '0%';
            
            // –í–æ—Å—Å—Ç–∞–Ω–æ–≤–ª–µ–Ω–∏–µ –∫–Ω–æ–ø–∫–∏
            const submitBtn = document.getElementById('submitBtn');
            submitBtn.disabled = false;
            submitBtn.textContent = 'ü•¢ –û—Ç–≤–µ—á–µ–Ω–æ: 0/10 ü•¢';
            
            // –°–∫—Ä—ã—Ç–∏–µ –æ—à–∏–±–æ–∫
            document.getElementById('errorMessage').style.display = 'none';
            
            // –ü—Ä–æ–∫—Ä—É—Ç–∫–∞ –Ω–∞–≤–µ—Ä—Ö
            document.querySelector('.header').scrollIntoView({ behavior: 'smooth' });
        }

        function submitQuiz() {
            console.log('–ö–Ω–æ–ø–∫–∞ –Ω–∞–∂–∞—Ç–∞'); // –û—Ç–ª–∞–¥–∫–∞
            
            const answers = {};
            
            // –ë–æ–ª–µ–µ –Ω–∞–¥–µ–∂–Ω—ã–π —Å–ø–æ—Å–æ–± —Å–±–æ—Ä–∞ –æ—Ç–≤–µ—Ç–æ–≤
            for(let i = 1; i <= 10; i++) {
                const checkedInput = document.querySelector(`input[name="q${i}"]:checked`);
                if (checkedInput) {
                    answers[`q${i}`] = checkedInput.value;
                }
            }
            
            console.log('–°–æ–±—Ä–∞–Ω–Ω—ã–µ –æ—Ç–≤–µ—Ç—ã:', answers); // –û—Ç–ª–∞–¥–∫–∞
            
            // –ü—Ä–æ–≤–µ—Ä—è–µ–º –ø–æ–ª–Ω–æ—Ç—É –æ—Ç–≤–µ—Ç–æ–≤
            if(Object.keys(answers).length < 10) {
                const unanswered = [];
                for(let i = 1; i <= 10; i++) {
                    if (!answers[`q${i}`]) {
                        unanswered.push(i);
                    }
                }
                console.log('–ù–µ–æ—Ç–≤–µ—á–µ–Ω–Ω—ã–µ –≤–æ–ø—Ä–æ—Å—ã:', unanswered); // –û—Ç–ª–∞–¥–∫–∞
                showError(`–ü–æ–∂–∞–ª—É–π—Å—Ç–∞, –æ—Ç–≤–µ—Ç—å –Ω–∞ –≤–æ–ø—Ä–æ—Å–∏–∫${unanswered.length > 1 ? '—ã' : ''} ${unanswered.join(', ')}`);
                return false;
            }
            
            try {
                // –û—Ç–∫–ª—é—á–∞–µ–º –∫–Ω–æ–ø–∫—É –≤–æ –≤—Ä–µ–º—è –æ–±—Ä–∞–±–æ—Ç–∫–∏
                const submitBtn = document.getElementById('submitBtn');
                submitBtn.disabled = true;
                submitBtn.textContent = '‚è≥ –û–ø—Ä–µ–¥–µ–ª—è–µ–º, –∫–æ–∫–æ–≤ —Ç—ã —Å—É–ø—á–∏–∫...';
                
                // –í—ã—á–∏—Å–ª—è–µ–º —Ä–µ–∑—É–ª—å—Ç–∞—Ç
                const resultSoup = calculateResult(answers);
                console.log('–†–µ–∑—É–ª—å—Ç–∞—Ç:', resultSoup); // –û—Ç–ª–∞–¥–∫–∞
                
                // –ü–æ–∫–∞–∑—ã–≤–∞–µ–º —Ä–µ–∑—É–ª—å—Ç–∞—Ç
                document.getElementById('soupName').textContent = `–¢—ã —Å–µ–≥–æ–¥–Ω—è ${resultSoup}!`;
                document.getElementById('soupEmoji').textContent = soups[resultSoup].emoji;
                document.getElementById('soupDescription').textContent = soups[resultSoup].description;
                
                // –ü–µ—Ä–µ–∫–ª—é—á–∞–µ–º –æ—Ç–æ–±—Ä–∞–∂–µ–Ω–∏–µ
                document.getElementById('quizForm').style.display = 'none';
                document.getElementById('result').style.display = 'block';
                
                // –ü—Ä–æ–∫—Ä—É—á–∏–≤–∞–µ–º –∫ —Ä–µ–∑—É–ª—å—Ç–∞—Ç—É
                setTimeout(() => {
                    document.getElementById('result').scrollIntoView({behavior: 'smooth'});
                }, 100);
                
            } catch (error) {
                console.error('–û—à–∏–±–∫–∞ –ø—Ä–∏ –æ–±—Ä–∞–±–æ—Ç–∫–µ —Ä–µ–∑—É–ª—å—Ç–∞—Ç–∞:', error);
                showError('–ü—Ä–æ–∏–∑–æ—à–ª–∞ –æ—à–∏–±–∫–∞. –ü–æ–ø—Ä–æ–±—É–π—Ç–µ –µ—â–µ —Ä–∞–∑.');
                
                // –í–æ–∑–≤—Ä–∞—â–∞–µ–º –∫–Ω–æ–ø–∫—É –≤ –∏—Å—Ö–æ–¥–Ω–æ–µ —Å–æ—Å—Ç–æ—è–Ω–∏–µ
                const submitBtn = document.getElementById('submitBtn');
                submitBtn.disabled = false;
                updateProgress(); // –û–±–Ω–æ–≤–ª—è–µ–º —Ç–µ–∫—Å—Ç –∫–Ω–æ–ø–∫–∏
            }
        }

        // –û–±—Ä–∞–±–æ—Ç—á–∏–∫ –æ—Ç–ø—Ä–∞–≤–∫–∏ —Ñ–æ—Ä–º—ã (–¥—É–±–ª–∏—Ä–æ–≤–∞–Ω–∏–µ –¥–ª—è –Ω–∞–¥–µ–∂–Ω–æ—Å—Ç–∏)
        document.getElementById('quizForm').addEventListener('submit', function(e) {
            e.preventDefault();
            e.stopPropagation();
            submitQuiz();
            return false;
        });

        // –û–±—Ä–∞–±–æ—Ç—á–∏–∫–∏ –¥–ª—è –æ–±–Ω–æ–≤–ª–µ–Ω–∏—è –ø—Ä–æ–≥—Ä–µ—Å—Å–∞
        document.addEventListener('DOMContentLoaded', function() {
            const questions = document.querySelectorAll('.question');
            questions.forEach((question) => {
                const inputs = question.querySelectorAll('input[type="radio"]');
                inputs.forEach(input => {
                    input.addEventListener('change', updateProgress);
                });
            });
            
            // –ù–∞—á–∞–ª—å–Ω–æ–µ –æ–±–Ω–æ–≤–ª–µ–Ω–∏–µ –ø—Ä–æ–≥—Ä–µ—Å—Å–∞
            updateProgress();
        });
    </script>
</body>
</html>
